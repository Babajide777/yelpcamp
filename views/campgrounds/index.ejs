<% layout("layouts/boilerplate")%>
<div class="container">
  <h1>All Campgrounds</h1>

  <% for (let campground of campgrounds){%> <% const {title, description,
  location, _id} = campground %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=title %></h5>
          <p class="card-text"><%=description %></p>
          <p class="card-text">
            <small class="text-muted"><%=location%></small>
          </p>
          <a class="btn btn-primary" href="/campgrounds/<%=_id%>"
            >View <%=title%></a
          >
        </div>
      </div>
    </div>
  </div>
  <% }%>
</div>
